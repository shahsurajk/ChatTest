<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msgLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="80dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    android:padding="4dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lic_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        app:civ_border_color="@color/THEME_DIVIDER"
        app:civ_border_width="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Xyz Abc"
            android:id="@+id/lic_uname"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/lic_card"
            android:layout_marginRight="2dp"
            app:cardBackgroundColor="@color/THEME_LIGHT_GREY"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPaddingBottom="5dp"
            app:contentPaddingLeft="8dp"
            app:contentPaddingRight="8dp"
            app:contentPaddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lic_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="left"
                    android:text="ssup"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/lic_fav"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    fontPath="@string/font_fontawesome"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:gravity="right"
            android:id="@+id/lic_timestamp"
            android:text="27 june, 2:00 am"
            android:textStyle="italic"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>